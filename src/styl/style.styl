html
    font-size 62.5%

body
    font-size 1.5em
    font-weight 400
    font-family Helvetica Neue,Helvetica,Arial,sans-serif
    color #222
    line-height 1.5

*:focus
    outline none

a
    colot #16407D

.icon
    position fixed
    color #16407D
    background #fff
    left 1.5rem
    z-index 900
    border 1px solid #16407D
    font-size 2.2rem
    padding .3rem
    cursor pointer
    &.icon-calendar
        top 5.2rem
        z-index 1002
        &.active
            border-color transparent
    &.icon-plus-squared
        top 11rem
    &.icon-logout
        bottom 1.5rem

.header
    position fixed
    width 100%
    background #16407D
    height 4.2rem
    margin-bottom 25px
    padding-top 10px
    box-sizing border-box
    top 0
    z-index 999999
    
    .header-logo
        background url('../img/logo.png') no-repeat
        width 366px
        height 13px
        margin-left 1.5rem
        float left
        margin-top 5px
        
    .menu-toggle
        background url('../img/menu.png') no-repeat
        width 48px
        height 40px
        position absolute
        top 0
        right 0
        cursor pointer
        display: none

    .header-filter
        float right
        margin-right 10px
        font-family 'Helvetica Neue Condensed',"Roboto Condensed",sans-serif
        
        select
            border 0
            background #16407d
            color #fff
            text-transform uppercase
            font-size 13px
            width 12rem
            
        button
            display: none

    
.events-row
    display flex
    align-items stretch
    justify-content space-between
    margin-top 9rem
    .event
        border-top: 3px solid #4A90E2
        padding 0 4rem 0 1rem
        margin-top -1.9rem
        max-width 20rem
        &:first-child
            padding-left 10rem
            transition: all 0.5s ease
            border-color #62C6F1

        .event-week
            margin-top -1.9rem
            color #5E6066
            font-size 1rem
            position relative
            padding-left 1rem
            margin-bottom .4rem
            &.active, &.red
                &:before
                    padding: 1px
                    background-clip: content-box
                    background-color: #4A90E2
                    border 2px solid #4A90E2
                    height 0.8rem
                    width 0.8rem
            &.red
                &:before
                    background-color: #E73E42
            &:before
                background #fff
                content ''
                height 1rem
                width 1rem
                border 2px solid #4A90E2
                display block
                border-radius 50%
                position absolute
                top 1rem
                left -1rem
                z-index 1
        &:first-child
            .event-week
                &:before
                    border-color #62C6F1
         .event-day
            font-size 1.3rem
            padding-left 1rem
            margin-bottom 2rem
        .event-item
            margin-bottom 2rem
            .event-box
                display table
                table-layout fixed
                height 4.2rem
                width 16rem
                margin-bottom .5rem
                cursor pointer
                &.lowercase 
                    span
                        text-transform none
                        font-weight: 500
                &.redblue
                    .event-item--img
                        background #16407D
                        border 0
                    .event-item--type
                        background #E73E42
                        color #fff
                        border 0
                .event-item--img
                    display table-cell
                    width 4rem
                    position relative
                    background #9B9B9B
                    z-index 1
                    border 2px solid #9B9B9B
                    img
                        max-height 100% 
                        max-width 100%
                        width auto
                        height auto
                        position absolute
                        top 0
                        bottom 0
                        left 0
                        right 0
                        margin auto
                .event-item--type
                    display table-cell
                    vertical-align middle
                    text-transform uppercase
                    color #16407D
                    font-size 1.1rem
                    font-weight bold
                    border 2px solid #9B9B9B
                    border-left 0
                    span
                        padding 0 0.7rem
                        display block
            .event-description
                color #000
                font-size 1.2rem
                
footer
    display: none
    position fixed
    bottom 0
    background #16407d
    height 4rem
    width 100%
    z-index 999

/* Compact mode styles */
.compact-mode
    .text-transform
        text-transform uppercase
    .events-row 
        .event 
            padding 0 1rem
            max-width 22rem
            &:first-child
                padding-left 10rem
            .event-item
                margin-bottom 2rem
                width 7rem
                display inline-block
                vertical-align top
                .event-description
                    line-height 1.1
                    font-size 1.1rem
                    font-weight 500
                    color #16407D
                .event-box 
                    width 6rem
                    .event-item--type
                        display: none
    &.active
        .events-row 
            .event
                padding 0rem 1rem
                &:first-child
                    padding-left 10rem

/* Chosen custom style */
.chosen-container-single 
    .chosen-single
        background #16407D 
        color #fff
        font-family 'Helvetica Neue Condensed',"Roboto Condensed",sans-serif
        border 0
        text-transform uppercase
        border-radius 0
        box-shadow none
        border 1px solid #16407D
        &:hover
            border 1px solid #fff

.chosen-container 
    .chosen-drop
        background: #ffffff
        border: 1px solid #ffffff
        border-top: none
        box-shadow: 0 3px 5px #989067
        color: #16407D !important
        font-weight: 300
        border-radius: 0
        z-index: 1
        font-size 1.2rem
        text-transform uppercase

    .chosen-results
        margin 0
        padding 0
        max-height none
        li
           line-height 17px
           color #16407D


.chosen-container-active.chosen-with-drop 
    .chosen-single
        border: 1px solid #fff
        box-shadow none
        background none

.chosen-container 
    .chosen-results li.highlighted
        background: #f7f7f7;
        color: #333 !important;
        font-weight 700



/* Calendar popup styles */
.calendar
    transition: all 0.3s ease
    text-align center
    width 347px
    position fixed
    top 50px
    padding 1rem 2rem 1rem
    background #fff
    z-index -1001
    border 2px solid #16407d
    top 5rem
    display: none
    left: 1.3rem;
    &.active
        display block
        z-index 1001
    i
        font-size 1.8rem
        padding-top 3px
        color #16407D
    header
        position relative
    h2
        font-size 2.7rem
        margin-bottom 0
        span
            font-weight normal
    tbody
        color #7c8a95
        td
            &:hover
                border 2px solid #16407d
    table
        margin-left 3.7rem
        border-collapse collapse
        border-spacing 0
    td
        border 2px solid transparent
        display inline-block
        height 2.2em
        line-height 2.2em
        text-align center
        width 2.5em
        font-size 14px
        color #000
    thead
        td
            font-weight normal
            text-transform uppercase
            font-size 11px
            color #5E6066
            width 3.5rem
    .event
        cursor pointer
        position relative
        &:after
            background #16407d
            border-radius 50%
            bottom 1px
            display block
            content ''
            height 6px
            left 50%
            margin -.25em 0 0 -.25em
            position absolute
            width 6px
        &.current-day
            &:after
                background #e73e42
    .btn-prev
        left 4rem
    .btn-next
        right 4.1rem
    .switch
        text-align left
        color #16407D
        margin-left -1rem
        margin-top 1rem
        a
            color #16407D !important
            font-size 1.3rem

.calendar .prev-month,
.calendar .next-month
    color #ddd

.calendar .prev-month:hover,
.calendar .next-month:hover
    border 2px solid transparent

.calendar .btn-prev,
.calendar .btn-next
    text-decoration none
    height 2em
    font-size .75em
    line-height 2em
    margin -1em
    position absolute
    top 50%
    width 2em
    color #16407D

.calendar .btn-prev:hover,
.calendar .btn-next:hover
    color #000

.overlay,
.overlay-calendar
    transition: all 0.4s ease
    background rgba(000,000,000,0.5)
    display: none
    height 100%
    width 100%
    position fixed
    z-index 899
    top:0;
    
.overlay-calendar
    background none
    

    
.header-filter button
    background #e73e42
    border 0
    color #fff
    float right
    margin-right 5%
    padding 0 10px
    font-size 1.4rem
    
legent
    font: 400 1.8rem/1.2 'Helvetica Neue Condensed',"Roboto Condensed",sans-serif;
    padding-bottom 2rem
    display: block
    
fieldset
    margin-bottom 1.5rem
    

.popup 
    position fixed
    z-index 900
    top 30%
    width 30rem
    margin-left -15rem
    left 50%
    border 1px solid #16407d
    display: none
    background #fff
    
    form
        padding: 2.5rem 2rem 0;
        margin: 0;
        
        label
            display: block
            line-height: 1.2;
            font-weight: 400;
            margin-bottom 0.2rem

        input, textarea
            height: 38px;
            height: 3.8rem;
            padding: .6rem 1rem;
            background-color: #fff;
            border: 1px solid #D1D1D1;
            border-radius: 2px;
            box-shadow: none;
            box-sizing: border-box;
            width 100%
            margin-bottom 2rem
            
        textarea
            height 13rem

        button
            color: #FFF;
            background-color: #1EAEDB;
            border-color: #1EAEDB;
            border 0
            height: 3.8rem;
            padding: 0 3rem;
            text-transform uppercase
            width 100%
            font-weight: 600;
            font-size: 1.1rem;
            

    
    .popup--header
        background #16407d
        color #fff
        padding: 3rem 2.5rem 1rem;

        
        h1
            color: #fff;
            padding: 0;
            margin: 0;
            font: 400 2.4rem/1.2 'Helvetica Neue Condensed',"Roboto Condensed",sans-serif;
            text-transform uppercase
            
        .close
            position: absolute;
            z-index: 10000;
            top: 0;
            right: 0;
            line-height: 25px;
            line-height: 2.5rem;
            width: 25px;
            width: 2.5rem;
            cursor: pointer;
            text-align: center;
            font-family: Arial,sans-serif;
            background: #fff;
            background: rgba(255,255,255,.3);
            color: #000;
            
    &.add-event
        width 60rem
        margin-left -30rem
        border 1px solid #ED4044
        top 10%
        height 60rem

        
        .popup--header
            background #ED4044
            
        .col-1, .col-2 
            float left
            width 49%
            
        .col-2
            margin-left 2%

        .popup--content-scroller
            overflow-y: scroll;
            height 50rem
.clearfix
    overflow: hidden;

